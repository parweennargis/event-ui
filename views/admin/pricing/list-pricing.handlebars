<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title"> Pricing Plan List </h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/add-pricing-plan">Create Pricing Plan</a></li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            </p>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th><b>#</b></th>
                  <th><b>Name</b></th>
                  <th><b>Amount</b></th>
                  <th><b>Description</b></th>
                  <th><b>Action</b></th>
                  <th><b>Active</b></th>
                </tr>
              </thead>
              <tbody>
                {{#each pricings}}
                <tr>
                  <td>{{@index}}</td>
                  <td>{{name}}</td>
                  <td>{{amount}}</td>
                  <td>{{short_description}}</td>
                  <td>{{is_active}}</td>
                  <td>
                    <input type="text" hidden value="{{_id}}" class="pricing_id">
                    <a href="#" id="pricing-delete">
                      <div class="preview"> <i class="icon-trash"></i> </div>
                    </a>
                    <a href="/admin/pricing-plan/{{_id}}" id="pricing-edit">
                      <div class="preview"> <i class="icon-pencil"></i> </div>
                    </a>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>