    <section id="event-details-section" class="event-details-section sec-ptb-100 clearfix">
          <div class="main-banner">
            <div class="bg-img">
                {{#if data.event.banner}}
                    <img src="{{data.event.banner}}" alt="Image_not_found">
                {{else}}
                    <img src="/assets/images/linked-profile-2.jpg" alt="Image_not_found">
                {{/if}}
            </div>
    </div>
    <div class="container bg-white">
        <div class="row ">
            {{!-- {{log data}} --}}

            <!-- col - event-details - start -->
            <div class="col-lg-8 col-md-12 col-sm-12 virtual-detail-banner">
                <div id="event-details-carousel" class="event-details-carousel owl-carousel owl-theme">
                    <div class="item">
                        {{#if data.event.banner}}
                            <img src="{{data.event.banner}}" alt="Image_not_found">
                        {{else}}
                            <img src="/assets/images/linked-profile-2.jpg" alt="Image_not_found">
                        {{/if}}
                    </div>
                </div>
                <!-- event-details - end -->
            </div>
            <!-- col - event-details - end -->

            <!-- sidebar-section - start -->
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="sidebar-section bg-gray">
                    <div class="row">
                        <div class="event-info-list ul-li clearfix mb-30">
                            <div class="event-content">
                                        {{!-- <small class="event-title">Event Date</small> --}}
                                        <h3 class="event-date">{{data.event.startMonth}}  {{data.event.startDay}}<br />
                                            {{data.event.startYear}}</h3>
                                    </div>
                        </div>

                        <div class="col-md-5 shareall  ml-auto">
                            <a href="" class="like-event" data-event="{{data.event._id}}" data-like="{{#if data.isEventFollow}}true{{else}}false{{/if}}">
                            {{#if data.isEventFollow}}
                                <i class="like-icon fas fa-heart"></i>
                            {{else}}
                                <i class="like-icon far fa-heart " ></i>
                            {{/if}}                                
                            </a>
                            <a href="" class="post-share" data-toggle="dropdown">
                                <img src="/assets/images/share.png" alt="Share">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a href="http://www.facebook.com/sharer.php?u=https://{{data.host}}/virtual-event/{{data.event._id}}" target="_blank">
                                    <i class="fab fa-facebook" aria-hidden="true"></i> Facebook
                                </a>
                                <a href="http://www.twitter.com/share?url=https://{{data.host}}/virtual-event/{{data.event._id}}" target="_blank"><i class="fab fa-twitter" aria-hidden="true"></i> Share on Twitter</a>
                                <a href="mailto:?subject={{data.event.title}}&body=https://{{data.host}}/virtual-event/{{data.event._id}}"><i class="far fa-envelope" aria-hidden="true"></i> Email</a>
                            </div>
                        </div>
                    </div>
                    <div class="event-title mb-30">
                        <!-- <span class="tag-item">
									<i class="fas fa-bookmark"></i>
									Featured Event
								</span> -->
                            <h2 class="event-title">{{data.event.title}}</h2>
                            {{#if data.event.organizer.email}}
                                <span>by {{data.event.organizer.email}}</span>
                            {{/if }}
                        </div>
                        <div class="ticket-box">
                            {{!-- <div class="price">$40 â€“ $99</div> --}}
                            <div class="purchase">
                                   <div class="button">
                                        <a href="#" class="button-red disp-flow-root pt-2 pb-2 buy-ticket"  data-event="{{data.event.zoom_link}}">Buy Tickets</a>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- sidebar-section - end -->

 <div class="row">

            <div class="col-lg-8 col-md-12 col-sm-12">
                <!-- event-details - start -->
                <div class="event-details mt-4 mb-15">
                    <div class="content-events">{{{data.event.description}}}</div>
                </div>
                <!-- event-details - end -->
            </div>
            <!-- col - event-details - end -->

            <!-- sidebar-section - start -->
            <div class="col-lg-4 col-md-12 col-sm-12">
                <div class="sidebar-section no-bg mt-4">
                    <div class="row">
                        <!-- location-wrapper - start -->
                        <div class="mb-30">

                             <div class="title-content">
