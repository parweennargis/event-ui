<section id="profile-section" class="event-section pt-3 pb-5 clearfix mobile-space">
    <div class="container">

        <div class="mb-15 ">
            <div class="row">

                <div class="container register profile ">
                    <div class="row mt-3">
                        <div class="col-md-3">
                            <div class="profile-nav">
                            <h5 class="mb-4">Edit Profile</h5>
                            {{#equalsTo data.role_type 'JOBSEEKER'}}
                                <a href="#">- Personal Information</a>
                            {{/equalsTo }}
                            {{#equalsTo data.role_type 'EXHIBITOR'}}
                                <a href="#">- Business Information</a>
                            {{/equalsTo }}
                            </div>
                        </div>
                        <div class="col-md-8 ml-auto register-right ">
                            {{#equalsTo data.role_type 'JOBSEEKER'}}                                                
                                <h3 class="mb-4">Personal Information</h3>
                            {{/equalsTo}}
                            {{#equalsTo data.role_type 'EXHIBITOR'}}                                                
                                <h3 class="mb-4">Business Information</h3>
                            {{/equalsTo}}

                            <div class="tab-content" id="myTabContent">
                                <form id="profile-update">
                                    {{!-- Job Seeker Form --}}
                                    {{#equalsTo data.role_type 'JOBSEEKER'}}
                                        <div class="row">
                                            <div class="col-md-12 form-box">
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">First
                                                        Name </label>
                                                    <input class="form-control" value="{{data.first_name}}" type="text" id="first_name_job" name="first_name">
                                                </div>
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Last
                                                        Name </label>
                                                    <input class="form-control" value="{{data.last_name}}" type="text" id="last_name_job" name="last_name">
                                                </div>
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Email
                                                    </label>
                                                    <input type="email" class="form-control" id="email_job" value="{{data.email}}" name="email"/>
                                                </div>
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Phone
                                                    </label>
                                                    <input class="form-control" type="text" minlength="10" id="phone_no_job" maxlength="10" value="{{data.phone_no}}" name="phone_no"/> <i class="prefix">+1</i>
                                                </div>
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Current
                                                        Occupation </label>
                                                    <select class="form-control" id="occupation_job" value={{data.occupation}} name="occupation">
                                                        <option value="DRIVER" {{#equalsTo data.occupation 'DRIVER'}}selected{{/equalsTo}}>Company Driver</option>
                                                        <option value="OPERATOR" {{#equalsTo data.occupation 'OPERATOR'}}selected{{/equalsTo}}>Owner-operator</option>
                                                        <option value="MECHANIC" {{#equalsTo data.occupation 'MECHANIC'}}selected{{/equalsTo}}>Mechanic</option>
                                                        <option value="LOGISTIC" {{#equalsTo data.occupation 'LOGISTIC'}}selected{{/equalsTo}}>Logistics & Non driving</option>
                                                        <option value="OTHERS" {{#equalsTo data.occupation 'OTHERS'}}selected{{/equalsTo}}>Others</option>
                                                    </select>
                                                </div>
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">
                                                        Experience <span style="font-size: 15px;"> (in years)</span> </label>
                                                    <input type="number" class="form-control" id="total_experience_job" min="1" max="20" value="{{data.total_experience}}" name="total_experience"/>
                                                </div>
                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Position Looking
                                                        For </label>
                                                    <select class="form-control" id="occupation_looking_for_job" value={{data.occupation_looking_for}} name="occupation_looking_for">
                                                        <option value="DRIVER" {{#equalsTo data.occupation_looking_for 'DRIVER'}}selected{{/equalsTo}}>Company Driver</option>
                                                        <option value="OPERATOR" {{#equalsTo data.occupation_looking_for 'OPERATOR'}}selected{{/equalsTo}}>Owner-operator</option>
                                                        <option value="MECHANIC" {{#equalsTo data.occupation_looking_for 'MECHANIC'}}selected{{/equalsTo}}>Mechanic</option>
                                                        <option value="LOGISTIC" {{#equalsTo data.occupation_looking_for 'LOGISTIC'}}selected{{/equalsTo}}>Logistics & Non driving</option>
                                                        <option value="OTHERS" {{#equalsTo data.occupation_looking_for 'OTHERS'}}selected{{/equalsTo}}>Others</option>
                                                    </select>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Address </label>
                                                    <input type="text" class="form-control" id="address_job" value="{{data.address}}" name="address"/>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">City</label>
                                                    <input type="text" class="form-control" id="city_job" value="{{data.city}}" name="city"/>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Province</label>
                                                    <input type="text" class="form-control" id="Proviance_job" value="{{data.province}}" name="province"/>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Postal Code </label>
                                                    <input type="text" class="form-control" id="postal_code_job" value="{{data.postal_code}}" name="postal_code"/>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">License Type <span style="font-size: 15px;">(If any)</span></label>
                                                    <input type="text" class="form-control" id="license_type" value="{{data.license_type}}" name="license_type"/>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">License Number</label>
                                                    <input type="text" class="form-control" id="license_number" value="{{data.license_number}}" name="license_number"/>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">License Date of Expiry</label>
                                                    <input type="date" class="form-control" id="license_date_of_expiry" value="{{data.license_date_of_expiry}}" name="license_date_of_expiry"/>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12">
                                                    <label class="string optional active">Rate Your Driving Record</label>
                                                    <select class="form-control" id="driving_record_rating" value={{data.driving_record_rating}} name="driving_record_rating">
                                                        <option value="EXCELLENT" {{#equalsTo data.driving_record_rating 'EXCELLENT'}}selected{{/equalsTo}}>Excellent</option>
                                                        <option value="VERY_GOOD" {{#equalsTo data.driving_record_rating 'VERY_GOOD'}}selected{{/equalsTo}}>Very Good</option>
                                                        <option value="GOOD" {{#equalsTo data.driving_record_rating 'GOOD'}}selected{{/equalsTo}}>Good</option>
                                                        <option value="BAD" {{#equalsTo data.driving_record_rating 'BAD'}}selected{{/equalsTo}}>Bad</option>
                                                        <option value="VERY_BAD" {{#equalsTo data.driving_record_rating 'VERY_BAD'}}selected{{/equalsTo}}>Very Bad</option>
                                                    </select>
                                                </div>

                                                <div class="form-group col-md-6 col-sm-12 upload-btn-wrapper">
                                                    <label class="string optional active">Upload Resume</label>
                                                    <input type="file" class="form-control" id="resume" data-name="resume" accept=".doc, .docx,.txt,.pdf"/>
                                                    <button class="upload-resume">Upload</button>
                                                    {{#if data.resume}}
                                                        <a href="{{data.resume}}">Download</a>
                                                    {{/if}}
                                                    {{#if data.resume}}
                                                        <div class="resume-preview">
                                                            <div class="image-width col-md-3">
                                                                <img src="{{data.resume}}" alt="Company Logo"/>
                                                                {{!-- <button type="button" class="close" aria-label="Close" data-id="{{this._id}}"><span aria-hidden="true">&times;</span></button> --}}
                                                            </div>
                                                        </div>
                                                    {{else}}
                                                        <div class="resume-preview"></div>
                                                    {{/if}}
                                                </div>

                                                {{!-- <div class="form-group col-md-12 col-sm-12 text-left mt-1 mb-1">
                                                    <div class="agree_text text-color-red" id="profile_message"></div>
                                                </div> --}}
                                                <div class="alert alert-danger col-md-12 col-sm-12" id="profile-error">
                                                    {{!-- <button type="button" class="close" data-dismiss="alert">x</button> --}}
                                                </div>
                                                <div class="alert alert-success col-md-12 col-sm-12" id="profile-success">
                                                    {{!-- <button type="button" class="close" data-dismiss="alert">x</button> --}}
                                                    Profile has been updated successfully
                                                </div>
                                                <div class="form-group col-md-12 col-sm-12 text-center mt-3 pb-3">
                                                    <button type="submit" class="btn btn-danger pl-5 pr-5"
                                                        id="profile-job-seeker">Update</button>
                                                </div>
                                            </div>
                                        </div>
                                    {{/equalsTo}}
