                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // print form
    {{!-- document.getElementById('printButton').addEventListener("click", print) --}}
    function print() {
        printJS({
            printable: 'home',
            type: 'html'
        })
    }

    // send msg on whatsapp
    {{!-- document.getElementById('sendButtons').addEventListener("click", getLinkWhastapp) --}}
    function getLinkWhastapp(number, message) {
        number = ''
        message = 'Mess'

        return console.log('https://api.whatsapp.com/send?phone=' + number + '&text=%20' + message)
    }

    // print HTML as pdf
    {{!-- document.getElementById('elementToPrint').addEventListener("click", convertHTMLtoPDF); --}}
    function convertHTMLtoPDF() {
        const element = document.getElementById('home');
        html2pdf(element, {
            margin: 1,
            filename: 'register.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { dpi: 192, letterRendering: true },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
        });
    }

    $(window).on('load', function() {
        $("#profile-success").hide();
        $("#profile-error").hide();
        var today = new Date().toISOString().split('T')[0];
        $('#license_date_of_expiry').attr('min', today);
    });

</script>
