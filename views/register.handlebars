    // print HTML as pdf
    document.getElementById('elementToPrint').addEventListener("click", convertHTMLtoPDF);
    function convertHTMLtoPDF() {
        var tabId = $('#myTab').find('.nav-link.active').attr('href');
        const element = document.getElementById(tabId.split('#')[1]);
        html2pdf(element, {
            margin: 1,
            filename: 'register.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { dpi: 192, letterRendering: true },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
        });
    }

    $(window).on('load', function() {
        var today = new Date().toISOString().split('T')[0];
        $('#license_date_of_expiry').attr('min', today);
    });

