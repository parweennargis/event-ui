                                                    <option value="OPERATOR">Owner-operator</option>
                                                    <option value="MECHANIC">Mechanic</option>
                                                    <option value="LOGISTIC">Logistics & Non driving</option>
                                                    <option value="OTHERS">Others</option>
                                                </select>
                                            </div>
                                            
                                            <div class="form-group col-md-6 col-sm-12">
                                                <label class="string optional active">License Type <span style="font-size: 15px;">(If any)</span></label>
                                                <input type="text" class="form-control" id="license_type" />
                                            </div>

                                             <div class="form-group col-md-6 col-sm-12">
                                                <label class="string optional active">License Number</label>
                                                <input type="text" class="form-control" id="license_number" />
                                            </div>

                                             <div class="form-group col-md-6 col-sm-12">
                                                <label class="string optional active">License Date of Expiry</label>
                                                <input type="date" class="form-control" id="license_date_of_expiry" />
                                            </div>

                                            <div class="form-group col-md-6 col-sm-12">
                                                <label class="string optional active">Rate Your Driving Record</label>
                                                <select class="form-control" id="driving_record_rating">
                                                    <option value="EXCELLENT">Excellent</option>
                                                    <option value="VERY_GOOD">Very Good</option>
                                                    <option value="GOOD">Good</option>
                                                    <option value="BAD">Bad</option>
                                                    <option value="VERY_BAD">Very Bad</option>
                                                </select>
                                            </div>

                                            <div class="form-group col-md-6 col-sm-12">
                                                <label class="string optional active">How You Heard About
